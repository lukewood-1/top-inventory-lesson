<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('headCommons') %>
  <title>Read - filtered query</title>
</head>
<body>
  <%- include('header') %>
  <main>
    <h1>Result</h1>

      <% if (locals.result.length > 0) { %>
        <table>

          <thead>
            <tr>
              <th colspan="2">Category</th>
              <th colspan="2">Path</th>
              <th colspan="2">Action</th>
            </tr>
            <tr>
              <th>id</th>
              <th>name</th>
              <th>id</th>
              <th>name</th>
              <th>id</th>
              <th>name</th>
            </tr>
          </thead>

          <tbody>
            <% result.forEach( r => { %>
              <tr>
                <td><%= r.category_id %></td>
                <td><%= r.category_name %></td>
                <td><%= r.path_id %></td>
                <td><%= r.path_name %></td>
                <td><%= r.action_id %></td>
                <td><%= r.action_name %></td>
              </tr>
            <% }) %>
          </tbody>

        </table>
      <% } else { %>
        <p>No results found</p>
      <% } %>

    <a href="/manage/search">back</a>
  </main>

  <%- include('footer') %>
</body>
</html>